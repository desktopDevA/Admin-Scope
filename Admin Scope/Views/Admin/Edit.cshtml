@model Product


<h1>Edit</h1>


<div class="row position-relative">
    <div class="col-lg-8">
        <form asp-action="Edit">
            <input type="hidden" asp-for="Prod_Id" />
            <div class="form-group">
                <label asp-for="Prod_Name" class="control-label"></label>
                <input asp-for="Prod_Name" class="form-control" />
                <span asp-validation-for="Prod_Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price" class="control-label"></label>
                <input asp-for="Price" class="form-control" />
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a class="btn btn-dark" asp-action="Index">Back to List</a>
</div>

